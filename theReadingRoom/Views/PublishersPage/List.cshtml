@model IEnumerable<AdilBooks.Models.PublisherDto>

@{
    ViewData["Title"] = "Publishers List";
}

<div class="container mt-4">
    <!-- Page Title -->
    <h1 class="text-center text-primary">🏢 Publishers List</h1>
    <hr class="mb-4">

    <!-- Create New Publisher Button (Only for Authenticated Users) -->
    @if (User.Identity.IsAuthenticated)
    {
        <div class="text-end mb-3">
            <a href="/Publishers/Add" class="btn btn-success">
                <i class="fas fa-plus-circle"></i> Add New Publisher
            </a>
        </div>
    }

    <!-- Publishers Table -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var publisher in Model)
                {
                    <tr>
                        <td>@publisher.PublisherName</td>
                        <td class="text-center">
                            <!-- View Details Button (Always Visible) -->
                            <a href="/Publishers/Find/@publisher.PublisherId" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> View
                            </a>

                            <!-- Edit & Delete (Only for Authenticated Users) -->
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a href="/Publishers/Edit/@publisher.PublisherId" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a href="/Publishers/ConfirmDelete/@publisher.PublisherId" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Back to Home -->
    <div class="text-center mt-4">
        <a href="/" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Home
        </a>
    </div>
</div>
