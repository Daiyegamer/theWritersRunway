@model AdilBooks.Models.AuthorDto

@{
    ViewData["Title"] = "Edit Author";
}

<h1 class="text-center text-primary">✍️ Edit Author</h1>
<hr />

<form asp-action="Update" asp-controller="AuthorsPage" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="AuthorId" />
    <input type="hidden" asp-for="Titles" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="control-label font-weight-bold">Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Bio" class="control-label font-weight-bold">Biography</label>
        <textarea asp-for="Bio" class="form-control" rows="4" required></textarea>
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageFile" class="control-label">Change Author Image</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <div class="form-group text-center mt-3">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Save Changes
        </button>
    </div>
</form>

<div class="text-center mt-3">
    <a asp-action="List" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
