@model AdilBooks.Models.AddBookDto

@{
    ViewData["Title"] = "Add New Book";
}

<h1>Add New Book</h1>

<form asp-action="Add" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Title Field -->
    <div class="form-group">
        <label asp-for="Title" class="control-label font-weight-bold"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Year Field -->
    <div class="form-group">
        <label asp-for="Year" class="control-label font-weight-bold"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <!-- Synopsis Field -->
    <div class="form-group">
        <label asp-for="Synopsis" class="control-label font-weight-bold"></label>
        <textarea asp-for="Synopsis" class="form-control"></textarea>
        <span asp-validation-for="Synopsis" class="text-danger"></span>
    </div>

    <!-- Publisher Name -->
    <div class="form-group">
        <label asp-for="PublisherName" class="control-label font-weight-bold"></label>
        <input asp-for="PublisherName" class="form-control" />
        <span asp-validation-for="PublisherName" class="text-danger"></span>
    </div>

    <!-- Authors Names -->
    <div class="form-group">
        <label asp-for="AuthorNames" class="control-label font-weight-bold"></label>
        <input asp-for="AuthorNames" class="form-control" />
        <span asp-validation-for="AuthorNames" class="text-danger"></span>
    </div>

    <!-- Submit Button -->
    <div class="form-group">
        <input type="submit" value="Create Book" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="List" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
